{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "lib": [
      "es7",
      "dom",
      "esnext"
    ],
    "paths": {
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ]
    },
    "outDir": "./lib/",
    "baseUrl": "src",
    // "strict": true,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "sourceMap": false,
    "inlineSourceMap": false,
    "typeRoots": [
      "./node_modules/@tuhu",
      "./types"
    ]
  },
  "include": [
    "./src",
    "./tsd"
  ]
}